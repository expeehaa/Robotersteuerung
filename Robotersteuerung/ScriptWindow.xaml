<Window x:Class="Robotersteuerung.ScriptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robotersteuerung"
        mc:Ignorable="d"
        Title="Robotscript" Height="300" Width="300">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Stretch" Height="20" VerticalAlignment="Top">
            <MenuItem x:Name="menuItem_header_data" Header="Datei">
                <MenuItem x:Name="menuItem_close" Header="Close" Click="menuItem_close_Click"/>
            </MenuItem>
        </Menu>
        <Grid Margin="0,20,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <ListBox Name="scriptBox" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>


        </Grid>
    </Grid>
</Window>
